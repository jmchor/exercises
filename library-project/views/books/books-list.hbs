{{! views/books/books-list.hbs }}

<h1>BOOKS</h1>

{{! since we passed allTheBooksFromDB as `books`,
we can iterate over it here with #each}}

{{#each books}}
	<div>
		<h3>{{this.title}}</h3>
		<p>By: {{this.author}}</p>
		{{! additional book property }}
		<a href='/books/{{this._id}}'>See details</a>
		{{! link that points to the details page }}
		<a href='/books/{{this._id}}/edit'>Edit</a> {{!-- link to redirect to the edit form for each specific book  --}}
	</div>
{{/each}}

	</div>
{{/each}}